{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/lib/pixelHeadless.ts",
    "src/lib/widgetHeadless.ts",
    "src/scripts/fetchAndIngestReport.ts",
    "src/scripts/saveStorageState.ts"
  ]
}